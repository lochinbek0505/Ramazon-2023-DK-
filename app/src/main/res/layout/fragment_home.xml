<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".ui.fragment.HomeFragment">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="@drawable/ic_bg3">

		<TextView
			android:id="@+id/tv_tb"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="mart 12/21-kun"
			android:textColor="@color/white"
			android:textSize="20sp" />

	</RelativeLayout>

	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="none">


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<!--	<androidx.cardview.widget.CardView-->
			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="230dp"
				android:layout_margin="10dp"
				android:nestedScrollingEnabled="true"
				app:cardCornerRadius="20dp"
				app:cardElevation="4dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@drawable/ic_bg3"
					android:gravity="center_horizontal"
					android:orientation="vertical">

					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="15dp">

						<ImageView
							android:layout_width="28dp"
							android:layout_height="28dp"
							android:layout_alignParentStart="true"
							android:layout_centerVertical="true"
							android:layout_marginStart="20dp"
							android:src="@drawable/ic_icon_saxarlik"
							app:tint="@color/white" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_centerInParent="true"
							android:text="Saharlik"
							android:textColor="@color/white"
							android:textSize="26sp" />

						<ImageView
							android:id="@+id/img_saharlik"
							android:layout_width="28dp"
							android:layout_height="28dp"
							android:layout_alignParentEnd="true"
							android:layout_centerVertical="true"
							android:layout_marginEnd="20dp"
							android:src="@drawable/ic_baseline_access_alarms_24"
							app:tint="@color/white" />
					</RelativeLayout>

					<TextView
						android:id="@+id/tv_saxarlik_time"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="15dp"
						android:text="00:00"
						android:textColor="@color/white"
						android:textSize="41sp" />

					<Chronometer
						android:id="@+id/tv_saharlik_remaining"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="15dp"
						android:text="- 00:01:20"
						android:textColor="@color/white"
						android:textSize="25sp" />

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="15dp"
						android:gravity="center_vertical"
						android:orientation="horizontal">

						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="10dp"
							android:layout_marginEnd="15dp"
							android:src="@drawable/ic_baseline_location_on_24" />

						<TextView
							android:id="@+id/tv_location_s"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="-10dp"
							android:text="O'zbekiston, Samarqand"
							android:textColor="@color/white"
							android:textSize="16sp" />
					</LinearLayout>


				</LinearLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="230dp"
				android:layout_margin="10dp"
				android:nestedScrollingEnabled="true"
				app:cardCornerRadius="20dp"
				app:cardElevation="4dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@drawable/ic_bg3"
					android:gravity="center_horizontal"
					android:orientation="vertical">

					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="15dp">

						<ImageView
							android:layout_width="28dp"
							android:layout_height="28dp"
							android:layout_alignParentStart="true"
							android:layout_centerVertical="true"
							android:layout_marginStart="20dp"
							android:src="@drawable/ic_baseline_bedtime_24"
							app:tint="@color/white" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_centerInParent="true"
							android:text="Iftorlik"
							android:textColor="@color/white"
							android:textSize="26sp" />

						<ImageView
							android:id="@+id/img_iftorlik"
							android:layout_width="28dp"
							android:layout_height="28dp"
							android:layout_alignParentEnd="true"
							android:layout_centerVertical="true"
							android:layout_marginEnd="20dp"
							android:src="@drawable/ic_baseline_access_alarms_24"
							app:tint="@color/white" />
					</RelativeLayout>

					<TextView
						android:id="@+id/tv_iftrolik_time"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="15dp"
						android:text="00:00"
						android:textColor="@color/white"
						android:textSize="41sp" />

					<Chronometer
						android:id="@+id/tv_iftorlik_remaining"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="15dp"
						android:text="- 00:01:20"
						android:textColor="@color/white"
						android:textSize="25sp"
						tools:targetApi="24" />

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="15dp"
						android:gravity="center_vertical"
						android:orientation="horizontal">

						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="10dp"
							android:layout_marginEnd="15dp"
							android:src="@drawable/ic_baseline_location_on_24" />

						<TextView
							android:id="@+id/tv_location_i"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="-10dp"
							android:text="O'zbekiston, Samarqand viloyati"
							android:textColor="@color/white"
							android:textSize="16sp" />
					</LinearLayout>


				</LinearLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/card_view"
				android:layout_width="match_parent"
				android:layout_height="160dp"
				android:nestedScrollingEnabled="true"
				app:cardCornerRadius="12dp"
				app:cardElevation="5dp"
				app:cardUseCompatPadding="true">

				<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@drawable/ic_bg3"
					android:padding="12dp">

					<TextView
						android:id="@+id/tv_eslatma"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/ofont"
						android:gravity="center"
						android:text="Ertangi kun"
						android:textColor="@color/white"
						android:textSize="22dp"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent" />

					<TextView
						android:id="@+id/time_tm"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="00.00.0000"
						android:textColor="@color/white"
						app:layout_constraintBottom_toBottomOf="@id/tv_eslatma"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintTop_toTopOf="parent" />

					<View
						android:id="@+id/view"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:layout_marginVertical="2dp"
						android:background="#1A000000"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toBottomOf="@id/tv_eslatma" />

					<ImageView
						android:id="@+id/image_saxarlik"
						android:layout_width="35dp"
						android:layout_height="35dp"
						android:scaleType="center"
						android:src="@drawable/ic_icon_saxarlik"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="@+id/tv_saxarlik"
						app:layout_constraintTop_toBottomOf="@id/view"
						app:tint="@color/white" />

					<TextView
						android:id="@+id/tv_saxarlik"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="12dp"
						android:fontFamily="@font/ofont"
						android:text="Saharlik"
						android:textColor="@color/white"
						android:textSize="24dp"
						app:layout_constraintStart_toEndOf="@id/image_saxarlik"
						app:layout_constraintTop_toTopOf="@id/tv_iftorlik" />

					<TextView
						android:id="@+id/tv_saxarlik_time_tm"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="12dp"
						android:fontFamily="@font/ofont"
						android:text="00:00"
						android:textColor="@color/white"
						android:textSize="24dp"
						app:layout_constraintStart_toEndOf="@id/image_saxarlik"
						app:layout_constraintTop_toBottomOf="@id/tv_saxarlik" />


					<ImageView
						android:id="@+id/image_iftorlik"
						android:layout_width="35dp"
						android:layout_height="35dp"
						android:layout_marginEnd="5dp"
						android:scaleType="center"
						android:src="@drawable/ic_icon_iftorlik"
						app:layout_constraintBottom_toBottomOf="@id/tv_iftrolik_time_tm"
						app:layout_constraintEnd_toStartOf="@id/tv_iftorlik"
						app:layout_constraintTop_toTopOf="@id/tv_iftorlik"
						app:tint="@color/white" />

					<TextView
						android:id="@+id/tv_iftorlik"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="12dp"
						android:fontFamily="@font/ofont"
						android:text="Iftorlik"
						android:textColor="@color/white"
						android:textSize="24dp"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintTop_toBottomOf="@id/view" />

					<TextView
						android:id="@+id/tv_iftrolik_time_tm"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/ofont"
						android:text="00:00"
						android:textColor="@color/white"
						android:textSize="24dp"
						app:layout_constraintStart_toStartOf="@id/tv_iftorlik"
						app:layout_constraintTop_toBottomOf="@id/tv_iftorlik" />


				</androidx.constraintlayout.widget.ConstraintLayout>
			</androidx.cardview.widget.CardView>


		</LinearLayout>
	</androidx.core.widget.NestedScrollView>

</LinearLayout>